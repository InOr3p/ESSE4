<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="250.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mat.unical.it.progettouid2022.controller.modifyCredentialsController">
   <children>
      <HBox prefHeight="100.0" prefWidth="200.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="40.0">
         <children>
            <Label prefHeight="27.0" prefWidth="150.0" text="Nuova email:">
               <HBox.margin>
                  <Insets left="30.0" />
               </HBox.margin>
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <TextField fx:id="emailField">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0">
         <children>
            <Label prefHeight="27.0" prefWidth="150.0" text="Nuova password:">
               <HBox.margin>
                  <Insets left="30.0" />
               </HBox.margin>
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <PasswordField fx:id="passwordField">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </PasswordField>
         </children>
      </HBox>
      <HBox layoutY="158.0" prefHeight="36.0" prefWidth="500.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="160.0">
         <children>
            <Label prefWidth="150.0" text="Conferma password:">
               <HBox.margin>
                  <Insets left="30.0" />
               </HBox.margin>
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <PasswordField fx:id="confirmPasswordField">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </PasswordField>
         </children>
      </HBox>
      <Button layoutX="328.0" layoutY="210.0" mnemonicParsing="false" onMouseClicked="#saveButtonClicked" text="Salva" />
      <Button layoutX="254.0" layoutY="210.0" mnemonicParsing="false" onMouseClicked="#cancelButtonClicked" text="Annulla" />
   </children>
</AnchorPane>
