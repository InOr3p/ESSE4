<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="root" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mat.unical.it.progettouid2022.controller.menuController">
   <children>
      <VBox prefHeight="600.0" prefWidth="100.0">
         <children>
            <ImageView fitHeight="90.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@photos/Esse4.png" />
               </image>
               <VBox.margin>
                  <Insets left="5.0" top="10.0" />
               </VBox.margin>
            </ImageView>
            <Button fx:id="homeButton" mnemonicParsing="false" onMouseClicked="#homeButtonClicked" prefHeight="40.0" prefWidth="90.0" textAlignment="CENTER">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets left="5.0" right="5.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="examButton" mnemonicParsing="false" onMouseClicked="#examButtonClicked" prefHeight="40.0" prefWidth="90.0">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="calendarButton" mnemonicParsing="false" onMouseClicked="#calendarButtonClicked" prefHeight="40.0" prefWidth="90.0">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="statsButton" mnemonicParsing="false" onMouseClicked="#statsButtonClicked" prefHeight="40.0" prefWidth="90.0">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="accountButton" mnemonicParsing="false" onMouseClicked="#accountButtonClicked" prefHeight="40.0" prefWidth="90.0">
               <VBox.margin>
                  <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
      <Separator orientation="VERTICAL" prefHeight="200.0" />
   </children>
</HBox>
